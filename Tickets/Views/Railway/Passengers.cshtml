@model IEnumerable<Tickets.Models.Passengers>

@{
    ViewBag.Title = "Список пассажиров";
}

<h2>@ViewBag.Title.</h2>
<br>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th class="text-center">Имя пассажира</th>
            <th class="text-center">Тип пассажира</th>
            <th class="text-center">Дата рождения пассажира</th>
            <th class="text-center">Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.PassengerTypes.Name</td>
                <td class="text-center">@item.Birthday.ToString("dd.MM.yyyy")</td>
                <td class="text-center">
                    <a class="btn btn-default btn-xs" href="@Url.Action("info", new { id = item.id })">
                        <span class="glyphicon glyphicon-edit"></span>
                        Редактировать
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
